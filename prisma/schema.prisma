// Prisma Schema for Inventory, Sales & Supplier Management System
// Database: MySQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ============================================
// USER MANAGEMENT
// ============================================

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      String   // 'admin', 'sales', 'procurement', 'management'
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
  @@index([email])
  @@index([role])
}

// ============================================
// MASTER DATA
// ============================================

model Customer {
  id                String   @id @default(uuid())
  customerCode      String   @unique
  businessName      String
  phone             String
  location          String   @db.Text
  contactPerson     String?
  contactPersonPhone String?
  creditBalance     Decimal  @default(0) @db.Decimal(12, 2) // Excess payment balance
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  sales             Sale[]

  @@map("customers")
  @@index([customerCode])
  @@index([businessName])
}

model Supplier {
  id           String         @id @default(uuid())
  supplierCode String         @unique
  name         String
  address      String         @db.Text
  phone        String
  otherPhone   String?
  location     String
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  items        SupplierItem[]
  purchases    Purchase[]

  @@map("suppliers")
  @@index([supplierCode])
  @@index([name])
}

model SupplierItem {
  id         String   @id @default(uuid())
  itemCode   String   @unique
  itemName   String
  supplierId String
  supplier   Supplier @relation(fields: [supplierId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("supplier_items")
  @@index([supplierId])
  @@index([itemCode])
}

model Product {
  id          String             @id @default(uuid())
  productCode String             @unique
  productName String
  price       Decimal?           @db.Decimal(10, 2)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  sales       Sale[]
  saleItems   SaleItem[]
  inventory   ProductInventory[]

  @@map("products")
  @@index([productCode])
  @@index([productName])
}

model RawMaterial {
  id           String                  @id @default(uuid())
  materialCode String                  @unique
  materialName String
  createdAt    DateTime                @default(now())
  updatedAt    DateTime                @updatedAt
  purchases    Purchase[]
  inventory    RawMaterialInventory[]

  @@map("raw_materials")
  @@index([materialCode])
  @@index([materialName])
}

// ============================================
// INVENTORY MANAGEMENT
// ============================================

model ProductInventory {
  id                  String                 @id @default(uuid())
  productId           String                 @unique
  product             Product                @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity            Decimal                @default(0) @db.Decimal(10, 2)
  minimumStock        Decimal                @default(0) @db.Decimal(10, 2)
  maximumStock        Decimal?               @db.Decimal(10, 2)
  reorderPoint        Decimal                @default(0) @db.Decimal(10, 2)
  unit                String                 @default("pcs") // 'pcs', 'kg', 'liters', etc.
  lastRestockedAt     DateTime?
  createdAt           DateTime               @default(now())
  updatedAt           DateTime               @updatedAt
  transactions        InventoryTransaction[]

  @@map("product_inventory")
  @@index([productId])
  @@index([quantity])
}

model RawMaterialInventory {
  id                  String                 @id @default(uuid())
  rawMaterialId       String                 @unique
  rawMaterial         RawMaterial            @relation(fields: [rawMaterialId], references: [id], onDelete: Cascade)
  quantity            Decimal                @default(0) @db.Decimal(10, 2)
  minimumStock        Decimal                @default(0) @db.Decimal(10, 2)
  maximumStock        Decimal?               @db.Decimal(10, 2)
  reorderPoint        Decimal                @default(0) @db.Decimal(10, 2)
  unit                String                 @default("kg") // 'kg', 'liters', 'bags', etc.
  lastRestockedAt     DateTime?
  createdAt           DateTime               @default(now())
  updatedAt           DateTime               @updatedAt
  transactions        InventoryTransaction[]

  @@map("raw_material_inventory")
  @@index([rawMaterialId])
  @@index([quantity])
}

model InventoryTransaction {
  id                    String                  @id @default(uuid())
  type                  String                  // 'product' or 'raw_material'
  productInventoryId    String?
  productInventory      ProductInventory?       @relation(fields: [productInventoryId], references: [id], onDelete: Cascade)
  rawMaterialInventoryId String?
  rawMaterialInventory  RawMaterialInventory?   @relation(fields: [rawMaterialInventoryId], references: [id], onDelete: Cascade)
  transactionType       String                  // 'sale', 'purchase', 'adjustment', 'return', 'transfer'
  quantityChange        Decimal                 @db.Decimal(10, 2) // Positive for IN, negative for OUT
  quantityBefore        Decimal                 @db.Decimal(10, 2)
  quantityAfter         Decimal                 @db.Decimal(10, 2)
  referenceId           String?                 // ID of sale, purchase, or adjustment
  referenceType         String?                 // 'sale', 'purchase', 'adjustment'
  notes                 String?                 @db.Text
  createdBy             String?
  createdAt             DateTime                @default(now())

  @@map("inventory_transactions")
  @@index([type])
  @@index([productInventoryId])
  @@index([rawMaterialInventoryId])
  @@index([transactionType])
  @@index([referenceId])
  @@index([createdAt])
}

// ============================================
// TRANSACTIONS
// ============================================

model Sale {
  id          String        @id @default(uuid())
  saleCode    String?       @unique // Auto-generated sale code (e.g., SALE-0001)
  customerId  String
  customer    Customer      @relation(fields: [customerId], references: [id])
  // Legacy single product field (for backward compatibility)
  productId   String?
  product     Product?      @relation(fields: [productId], references: [id])
  quantity    Decimal?      @db.Decimal(10, 2)
  price       Decimal?      @db.Decimal(10, 2)
  // Multi-product support
  items       SaleItem[]
  // Totals
  total       Decimal       @db.Decimal(12, 2)
  supplyDate  DateTime
  paymentMode String        // 'cash', 'transfer', 'pos', 'credit', 'others'
  amountPaid  Decimal       @db.Decimal(12, 2)
  balance     Decimal       @db.Decimal(12, 2)
  paymentDate DateTime?
  status      String        @default("pending") // 'pending', 'partial', 'paid'
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  payments    SalePayment[]

  @@map("sales")
  @@index([customerId])
  @@index([productId])
  @@index([status])
  @@index([supplyDate])
  @@index([saleCode])
}

model SaleItem {
  id        String   @id @default(uuid())
  saleId    String
  sale      Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Decimal  @db.Decimal(10, 2)
  price     Decimal  @db.Decimal(10, 2)
  total     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now())

  @@map("sale_items")
  @@index([saleId])
  @@index([productId])
}

model SalePayment {
  id          String   @id @default(uuid())
  saleId      String
  sale        Sale     @relation(fields: [saleId], references: [id], onDelete: Cascade)
  amount      Decimal  @db.Decimal(10, 2)
  paymentDate DateTime
  paymentMode String
  notes       String?  @db.Text
  createdAt   DateTime @default(now())

  @@map("sale_payments")
  @@index([saleId])
  @@index([paymentDate])
}

model Purchase {
  id            String            @id @default(uuid())
  supplierId    String
  supplier      Supplier          @relation(fields: [supplierId], references: [id])
  rawMaterialId String
  rawMaterial   RawMaterial       @relation(fields: [rawMaterialId], references: [id])
  quantity      Decimal           @db.Decimal(10, 2)
  totalAmount   Decimal           @db.Decimal(10, 2)
  amountPaid    Decimal           @db.Decimal(10, 2)
  balance       Decimal           @db.Decimal(10, 2)
  purchaseDate  DateTime
  status        String            @default("pending") // 'pending', 'partial', 'paid'
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt
  payments      PurchasePayment[]

  @@map("purchases")
  @@index([supplierId])
  @@index([rawMaterialId])
  @@index([status])
  @@index([purchaseDate])
}

model PurchasePayment {
  id          String   @id @default(uuid())
  purchaseId  String
  purchase    Purchase @relation(fields: [purchaseId], references: [id], onDelete: Cascade)
  amount      Decimal  @db.Decimal(10, 2)
  paymentDate DateTime
  paymentMode String
  notes       String?  @db.Text
  createdAt   DateTime @default(now())

  @@map("purchase_payments")
  @@index([purchaseId])
  @@index([paymentDate])
}

// ============================================
// SYSTEM TABLES
// ============================================

model AuditLog {
  id        String   @id @default(uuid())
  userId    String
  action    String   // 'create', 'update', 'delete'
  entity    String   // 'customer', 'sale', 'purchase', etc.
  entityId  String
  oldValue  Json?
  newValue  Json?
  ipAddress String?
  userAgent String?  @db.Text
  createdAt DateTime @default(now())

  @@map("audit_logs")
  @@index([userId])
  @@index([entity])
  @@index([action])
  @@index([createdAt])
}
